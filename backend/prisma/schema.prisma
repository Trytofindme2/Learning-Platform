
  generator client {
    provider = "prisma-client-js"
    output   = "../generated/prisma"
  }

  datasource db {
    provider = "mysql"
    url      = env("DATABASE_URL")
  }

  model admin{
    id String @id @default(uuid())
    name String?
    email String @unique
    password String
    role Role @default(ADMIN)
  }


  model Student{
    id String @id @default(uuid())
    fullname String?
    nickname String?
    email String @unique
    password String
    avatar String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    role Role @default(STUDENT)
  }

  enum Role {
    STUDENT
    ADMIN
  }